<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   android:background="@drawable/fondo_default"
                                                   tools:context=".informacionrover">

    <ImageButton
        android:id="@+id/btnatras2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/flecha"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/flecha" />

    <TextView
        android:id="@+id/txvnombrerover"
        android:layout_width="446dp"
        android:layout_height="304dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="100dp"
        android:fontFamily="@font/quantico_bold"
        android:text="Nombre del Rover"
        android:textAlignment="center"
        android:textColor="@color/colorTexto"
        android:textSize="80sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:id="@+id/button2"
        android:layout_width="301dp"
        android:layout_height="114dp"
        android:layout_marginStart="144dp"
        android:layout_marginTop="32dp"
        android:background="@color/colorBotones"
        android:fontFamily="@font/quantico_bold"
        android:text="@string/galeria"
        android:textAllCaps="false"
        android:textColor="@color/colorTexto"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txvnombrerover"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcvcamaras"
        android:layout_width="224dp"
        android:layout_height="120dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toEndOf="@+id/textView9" app:layout_constraintTop_toBottomOf="@+id/txvtotalfotos"/>

    <TextView
        android:id="@+id/textView8"
        android:layout_width="270dp"
        android:layout_height="80dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="11dp"
        android:fontFamily="@font/quantico_bold"
        android:text="@string/ultimafoto"
        android:textColor="@color/colorTexto" android:textSize="30sp"
        app:layout_constraintStart_toEndOf="@+id/txvnombrerover" app:layout_constraintTop_toBottomOf="@+id/textView6"/>

    <TextView
        android:id="@+id/textView9"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/quantico_bold"
        android:text="@string/camaras"
        android:textColor="@color/colorTexto" android:textSize="30sp"
        app:layout_constraintStart_toEndOf="@+id/txvnombrerover" app:layout_constraintTop_toBottomOf="@+id/textView7"/>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="270dp"
        android:layout_height="80dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="11dp"
        android:fontFamily="@font/quantico_bold"
        android:text="@string/estado"
        android:textColor="@color/colorTexto" android:textSize="30sp"
        app:layout_constraintStart_toEndOf="@+id/txvnombrerover" app:layout_constraintTop_toBottomOf="@+id/textView3"/>

    <TextView
        android:id="@+id/txvfechalanzamientodato"
        android:layout_width="190dp"
        android:layout_height="80dp"
        android:layout_marginStart="11dp"
        android:layout_marginTop="100dp"
        android:fontFamily="@font/quantico_bold"
        android:text="dd/mm/YY"
        android:textColor="@color/colorTexto" android:textSize="30sp"
        app:layout_constraintStart_toEndOf="@+id/textView5"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="270dp"
        android:layout_height="80dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="11dp"
        android:fontFamily="@font/quantico_bold"
        android:text="@string/fechaaterrizaje"
        android:textColor="@color/colorTexto" android:textSize="30sp"
        app:layout_constraintStart_toEndOf="@+id/txvnombrerover" app:layout_constraintTop_toBottomOf="@+id/textView5"/>

    <TextView
        android:id="@+id/txvestado"
        android:layout_width="180dp"
        android:layout_height="80dp"
        android:layout_marginStart="11dp"
        android:layout_marginTop="11dp"
        android:fontFamily="@font/quantico_bold"
        android:text="(in)activo" android:textColor="@color/colorTexto"
        android:textSize="30sp"
        app:layout_constraintStart_toEndOf="@+id/textView6"
        app:layout_constraintTop_toBottomOf="@+id/txvfechaaterrizajedato"/>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="270dp"
        android:layout_height="80dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="11dp"
        android:fontFamily="@font/quantico_bold"
        android:text="@string/totalfotos"
        android:textColor="@color/colorTexto" android:textSize="30sp"
        app:layout_constraintStart_toEndOf="@+id/txvnombrerover" app:layout_constraintTop_toBottomOf="@+id/textView8"/>

    <TextView
        android:id="@+id/txvfechaaterrizajedato"
        android:layout_width="190dp"
        android:layout_height="80dp"
        android:layout_marginStart="11dp"
        android:layout_marginTop="11dp"
        android:fontFamily="@font/quantico_bold"
        android:text="dd/mm/YY" android:textColor="@color/colorTexto"
        android:textSize="30sp"
        app:layout_constraintStart_toEndOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/txvfechalanzamientodato"/>

    <TextView
        android:id="@+id/txvtotalfotos"
        android:layout_width="180dp"
        android:layout_height="80dp"
        android:layout_marginStart="11dp"
        android:layout_marginTop="11dp"
        android:fontFamily="@font/quantico_bold"
        android:text="X" android:textColor="@color/colorTexto"
        android:textSize="30sp"
        app:layout_constraintStart_toEndOf="@+id/textView7"
        app:layout_constraintTop_toBottomOf="@+id/txvfechaultimafoto"/>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="270dp"
        android:layout_height="80dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="100dp"
        android:fontFamily="@font/quantico_bold"
        android:text="@string/fechalanzamiento"
        android:textColor="@color/colorTexto" android:textSize="30sp"
        app:layout_constraintStart_toEndOf="@+id/txvnombrerover"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/txvfechaultimafoto"
        android:layout_width="180dp"
        android:layout_height="80dp"
        android:layout_marginStart="11dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/quantico_bold"
        android:text="dd/mm/YY" android:textColor="@color/colorTexto"
        android:textSize="30sp"
        app:layout_constraintStart_toEndOf="@+id/textView8" app:layout_constraintTop_toBottomOf="@+id/txvestado"/>

</androidx.constraintlayout.widget.ConstraintLayout>