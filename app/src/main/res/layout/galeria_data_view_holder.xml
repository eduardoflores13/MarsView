<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="150dp"
                                                   android:background="@drawable/fondo_items">

    <ImageView
        android:id="@+id/imagen"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/roboto"
        android:textColor="@color/colorTexto"
        android:textSize="25sp"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="imagenRover" />

    <Button
        android:id="@+id/btngaleria"
        android:layout_width="76dp"
        android:layout_height="74dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="32dp"
        android:background="@color/colorBotones"
        android:onClick="verFoto"
        android:text=">"
        android:textAlignment="center"
        android:textColor="@color/colorTexto"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text=">" />

    <TextView
        android:id="@+id/textgid"
        android:layout_width="57dp"
        android:layout_height="26dp"
        android:layout_marginStart="120dp"
        android:layout_marginTop="88dp"
        android:fontFamily="@font/roboto"
        android:text="@string/fechafoto"
        android:textColor="@color/colorTexto"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/imagen"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@string/id" />

    <TextView
        android:id="@+id/txtfechafoto"
        android:layout_width="83dp"
        android:layout_height="26dp"
        android:layout_marginStart="184dp"
        android:layout_marginTop="88dp"
        android:fontFamily="@font/roboto"
        android:textAlignment="gravity"
        android:textColor="@color/colorTexto"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="@+id/imagen"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textgnombre"
        android:layout_width="55dp"
        android:layout_height="27dp"
        android:layout_marginStart="120dp"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/roboto"
        android:text="@string/id"
        android:textColor="@color/colorTexto"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/imagen"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="imagenRover" />

    <TextView
        android:id="@+id/txtid"
        android:layout_width="85dp"
        android:layout_height="28dp"
        android:layout_marginStart="180dp"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/roboto"
        android:textColor="@color/colorTexto"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/imagen"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>