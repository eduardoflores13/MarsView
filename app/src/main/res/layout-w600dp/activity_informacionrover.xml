<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_default"
    tools:context=".informacionrover">

    <TextView
        android:id="@+id/txvnombrerover"
        android:layout_width="354dp"
        android:layout_height="172dp"
        android:layout_marginTop="80dp"
        android:fontFamily="@font/quantico_bold"
        android:text="Nombre del Rover"
        android:textAlignment="center"
        android:textColor="@color/colorTexto" android:textSize="60sp"
        app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <Button
        android:id="@+id/button2"
        android:layout_width="211dp"
        android:layout_height="79dp"
        android:layout_marginTop="50dp"
        android:background="@color/colorBotones"
        android:fontFamily="@font/quantico_bold"
        android:text="@string/galeria"
        android:textAllCaps="false"
        android:textColor="@color/colorTexto"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@+id/rcvcamaras"
    />
    <ImageButton
        android:id="@+id/btnatras2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/flecha"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/flecha" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcvcamaras"
        android:layout_width="239dp"
        android:layout_height="97dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toEndOf="@+id/textView9" app:layout_constraintTop_toBottomOf="@+id/txvtotalfotos"/>
    <TextView
        android:id="@+id/textView7"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginStart="95dp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/quantico_bold"
        android:text="@string/totalfotos"
        android:textColor="@color/colorTexto"
        android:textSize="23sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8"/>
    <TextView
        android:id="@+id/txvfechaultimafoto"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/quantico_bold"
        android:text="dd/mm/YY"
        android:textColor="@color/colorTexto" android:textSize="23sp"
        app:layout_constraintStart_toEndOf="@+id/textView8" app:layout_constraintTop_toBottomOf="@+id/txvestado"/>
    <TextView
        android:id="@+id/txvfechalanzamientodato"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="36dp"
        android:fontFamily="@font/quantico_bold"
        android:text="dd/mm/YY"
        android:textColor="@color/colorTexto" android:textSize="23sp"
        app:layout_constraintStart_toEndOf="@+id/textView5" app:layout_constraintTop_toBottomOf="@+id/txvnombrerover"/>
    <TextView
        android:id="@+id/txvtotalfotos"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/quantico_bold"
        android:text="X"
        android:textColor="@color/colorTexto" android:textSize="23sp"
        app:layout_constraintStart_toEndOf="@+id/textView7"
        app:layout_constraintTop_toBottomOf="@+id/txvfechaultimafoto"/>
    <TextView
        android:id="@+id/txvfechaaterrizajedato"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/quantico_bold"
        android:text="dd/mm/YY"
        android:textColor="@color/colorTexto" android:textSize="23sp"
        app:layout_constraintStart_toEndOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/txvfechalanzamientodato"/>
    <TextView
        android:id="@+id/textView4"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginStart="95dp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/quantico_bold"
        android:text="@string/fechaaterrizaje"
        android:textColor="@color/colorTexto"
        android:textSize="23sp" app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5"/>
    <TextView
        android:id="@+id/textView6"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginStart="95dp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/quantico_bold"
        android:text="@string/estado"
        android:textColor="@color/colorTexto"
        android:textSize="23sp"
        app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@+id/textView4"/>
    <TextView
        android:id="@+id/txvestado"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/quantico_bold"
        android:text="(in)activo"
        android:textColor="@color/colorTexto" android:textSize="23sp"
        app:layout_constraintStart_toEndOf="@+id/textView6"
        app:layout_constraintTop_toBottomOf="@+id/txvfechaaterrizajedato"/>
    <TextView
        android:id="@+id/textView8"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginStart="95dp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/quantico_bold"
        android:text="@string/ultimafoto"
        android:textColor="@color/colorTexto"
        android:textSize="23sp"
        app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@+id/textView6"/>
    <TextView
        android:id="@+id/textView9"
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:layout_marginStart="95dp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/quantico_bold"
        android:text="@string/camaras"
        android:textColor="@color/colorTexto"
        android:textSize="23sp"
        app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@+id/textView7"/>
    <TextView
        android:id="@+id/textView5"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginStart="95dp"
        android:layout_marginTop="36dp"
        android:fontFamily="@font/quantico_bold"
        android:text="@string/fechalanzamiento"
        android:textColor="@color/colorTexto"
        android:textSize="23sp"
        app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@+id/txvnombrerover"/>

</androidx.constraintlayout.widget.ConstraintLayout>